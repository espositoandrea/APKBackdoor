<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <layer-list>
            <item android:left="@dimen/cell_margin" android:right="@dimen/cell_margin">
                <shape>
                    <solid android:color="@color/bg_cell_focused" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_selected="true">
        <layer-list>
            <item android:left="@dimen/cell_margin" android:right="@dimen/cell_margin">
                <shape>
                    <solid android:color="@color/bg_cell_selected" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list>
            <item android:left="@dimen/cell_margin" android:right="@dimen/cell_margin">
                <shape>
                    <solid android:color="@color/bg_cell_pressed" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:left="@dimen/cell_margin" android:right="@dimen/cell_margin">
                <shape>
                    <solid android:color="@color/bg_cell_normal" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>