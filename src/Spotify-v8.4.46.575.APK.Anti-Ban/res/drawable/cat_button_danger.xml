<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <stroke android:width="@dimen/cat_button_border_width" android:color="@color/cat_dark_red" />
            <size android:height="@dimen/cat_button_height" />
            <corners android:radius="@dimen/cat_button_corner_radius" />
            <padding android:left="@dimen/cat_button_corner_radius" android:top="0.0px" android:right="@dimen/cat_button_corner_radius" android:bottom="0.0px" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <stroke android:width="@dimen/cat_button_border_width" android:color="@color/cat_light_red" />
            <size android:height="@dimen/cat_button_height" />
            <corners android:radius="@dimen/cat_button_corner_radius" />
            <padding android:left="@dimen/cat_button_corner_radius" android:top="0.0px" android:right="@dimen/cat_button_corner_radius" android:bottom="0.0px" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <stroke android:width="@dimen/cat_button_border_width" android:color="@color/cat_dark_red" />
            <size android:height="@dimen/cat_button_height" />
            <corners android:radius="@dimen/cat_button_corner_radius" />
            <padding android:left="@dimen/cat_button_corner_radius" android:top="0.0px" android:right="@dimen/cat_button_corner_radius" android:bottom="0.0px" />
        </shape>
    </item>
    <item>
        <shape>
            <stroke android:width="2.0dip" android:color="@color/cat_medium_red" />
            <size android:height="@dimen/cat_button_height" />
            <corners android:radius="@dimen/cat_button_corner_radius" />
            <padding android:left="@dimen/cat_button_corner_radius" android:top="0.0px" android:right="@dimen/cat_button_corner_radius" android:bottom="0.0px" />
        </shape>
    </item>
</selector>