<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <selector>
            <item android:state_pressed="true">
                <shape android:shape="rectangle">
                    <solid android:color="#33000000" />
                </shape>
            </item>
            <item android:state_selected="true">
                <shape android:shape="rectangle">
                    <solid android:color="#33000000" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#00000000" />
                </shape>
            </item>
        </selector>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient android:startColor="#00000000" android:endColor="#ff121314" android:angle="270.0" android:type="linear" android:centerX="0.5" android:centerY="0.55" android:centerColor="#33000000" />
        </shape>
    </item>
</layer-list>