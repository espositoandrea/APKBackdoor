<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/bg_button_light_pressed" />
            <corners android:bottomRightRadius="@dimen/popup_corner_radius" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/bg_button_light_normal" />
            <corners android:bottomRightRadius="@dimen/popup_corner_radius" />
        </shape>
    </item>
</selector>